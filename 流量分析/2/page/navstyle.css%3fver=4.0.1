/* COMIC NAVIGATION 
Author: Tyler Martin & Denis Caron
Style: Hijinks Ensue
*/

.comic_navi_wrapper {
	display: table;
	border-collapse: collapse;
	text-align: center;
	float: left;
}

.navi-comictitle {
	padding-top: 26px;
	max-width: 100px;
}

.navi {
	width: 66px;
	padding-top: 37px;
	font-size: 9px;
	color: #555;
	display: inline-block;
}

.navi:hover, #navi-share:hover {
	background-position:0 -40px;
}

.navi-firstinchap {
	background: url('first.jpg') no-repeat;
}

.navi-first, .navi-first-in {
	background: url('first.jpg') no-repeat;
}

.navi-prevchap, .navi-story_prev {
	background: url('prevchap.jpg') no-repeat;
}

.navi-story_prev_in {
	background: url('prevchap.jpg') no-repeat;
}

.navi-prev, .navi-previous, .navi-prev-in {
background:transparent url(prev.jpg) no-repeat scroll 0 0;
margin-left:20px;
margin-right:5px;
width:140px;
}

.navi-buyprint {
	border: none;
	cursor: pointer;
	width: 115px;
	background: url('buyprint.jpg') no-repeat;
}

.navi-buyprint:hover, button .navi-buyprint:hover {
	width: 115px;
	background: url('buyprint.jpg') no-repeat;
	background-position: 0 -40px;
	color: #f00;
}

.navi-buyprint-form {
	width: 66px;
	display: inline-block;
	margin: 0;
	padding: 0;
}

.navi-archive, .navi-archives {
	background: url('archive.jpg') no-repeat;
}

.navi-random {
	background: url('random.jpg') no-repeat;
}

#navi-share {
	background: url('archive.jpg') no-repeat;
}

.navi-subscribe {
	background: url('archive.jpg') no-repeat;
}

.navi-comments {
	padding: 0;
	background: url('comments.jpg') no-repeat;
}

a.navi-comments span {
	display: inline-block;
	width: 66px;
	height: 66px;
	font-size: 16px;
	font-weight: bold;
	line-height: 66px;
	color: #fff;
	text-indent: 0;
}

a.navi-comments span:hover {
	color: #860b04;
}

.navi-next, .navi-next-in {
	margin-left: 5px;
	width:90px;
	background: url('next.jpg') no-repeat;
}

.navi-nextchap, .navi-story_next {
	background: url('nextchap.jpg') no-repeat;
}

.navi-story_next_in {
	background: url('nextchap.jpg') no-repeat;
}

.navi-last, .navi-last-in {
	background: url('last.jpg') no-repeat;
}

.navi-lastinchap {
	background: url('last.jpg') no-repeat;
}

.navi-void, .navi-void:hover {
	color: #999;
	background-position: 0 0;
}

#navi-share-box {
	height: 96px;
	width: 120px;
	padding: 1px;
	background: url('sharebox.png') 0 0 no-repeat;
	display: none;
	position: absolute;
	margin: -180px 0 300px 0;
	zoom: 1;
}

#navi-share-box a {
	width: 24px;
	height: 24px;
	display: block;
	float: left;
	text-indent: -9999px;
	overflow: hidden;
}

